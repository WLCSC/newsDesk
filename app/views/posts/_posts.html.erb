<table class="table">
  <thead>
    <tr>
        <th>Title</th>
        <th>Running</th>
      <th>Start</th>
      <th>End</th>
    </tr>
  </thead>

  <tbody>
    <% posts.each do |post| %>
      <tr>
          <td>
              <%= link_to post.title, post %>
              <p class="byline">by <%= link_to post.user.name, post.user %> at <%= nice_datetime post.created_at %></p>
              <% unless @organization %><p class="byline">on <%= link_to post.organization.name, post.organization %></p><% end %>
          </td>
          <td><%= post.status %></td>
        <td><%= nice_date post.start %></td>
        <td><%= nice_date post.end %></td>
      </tr>
    <% end %>
  </tbody>
</table>

