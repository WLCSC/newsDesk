<%= form_for @user, :html => { :class => 'form-horizontal' } do |f| %>
    <% if @user.errors.any? %>
        <div id="error_explanation">
            <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

            <ul>
                <% @user.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <div class="control-group">
        <%= f.label :username, :class => 'control-label' %>
        <div class="controls">
            <% if @user.username %>
                <p><%= @user.username %></p>
            <% else %>
                <%= f.text_field :username, :class => 'text_field' %>
            <% end %>
        </div>
    </div>
    <div class="control-group">
        <%= f.label :administrator, :class => 'control-label' %>
        <div class="controls">
            <% if current_user.admin? %>
                <%= f.check_box :administrator, :class => 'check_box' %>
            <% else %>
                <p><%= truthy_thumb @user.administrator %></p>
            <% end %>
        </div>
    </div>
     <div class="control-group">
        <%= f.label :supervisor, :class => 'control-label' %>
        <div class="controls">
            <% if current_user.admin? %>
                <%= f.check_box :supervisor, :class => 'check_box' %>
            <% else %>
                <p><%= truthy_thumb @user.supervisor %></p>
            <% end %>
        </div>
    </div>
   <div class="control-group">
        <%= f.label :name, :class => 'control-label' %>
        <div class="controls">
            <% if current_user.admin? %>
                <%= f.text_field :name, :class => 'text_field' %>
            <% else %>
                <p><%= @user.name %></p>
            <% end %>
        </div>
    </div>
    <div class="control-group">
        <%= f.label :email_address, :class => 'control-label' %>
        <div class="controls">
            <% if current_user.admin? || current_user == @user %>
                <%= f.text_field :email_address, :class => 'text_field' %>
            <% else %>
                <p><%= @user.email_address %></p>
            <% end %>
        </div>
    </div>
    <% if @user.internal && (current_user.admin? || current_user == @user) %>
        <div class="control-group">
            <%= f.label :password, :class => 'control-label' %>
            <div class="controls">
                <%= f.password_field :password, :class => 'password_field' %>
            </div>
        </div>
        <div class="control-group">
            <%= f.label :password_confirmation, :class => 'control-label' %>
            <div class="controls">
                <%= f.password_field :password_confirmation, :class => 'password_field' %>
            </div>
        </div>
    <% end %>

    <div class="form-actions">
        <%= f.submit nil, :class => 'btn btn-primary' %>
    </div>
<% end %>




